<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <services>
        <service id="oxind_feedback.form_type.issue.default" class="Oxind\FeedbackBundle\Form\Type\IssueType">
            <argument>%oxind_feedback.model.issue.class%</argument>
            <tag name="form.type" alias="oxind_feedback_issue" />
        </service>

        <service id="oxind_feedback.form_factory.issue.default" class="Oxind\FeedbackBundle\FormFactory\IssueFormFactory" public="false">
            <argument type="service" id="form.factory" />
            <argument>%oxind_feedback.form.issue.type%</argument>
            <argument>%oxind_feedback.form.issue.name%</argument>
        </service>
    </services>
</container>
