<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oxind_feedback.model.feedback.class">Oxind\FeedbackBundle\Entity\Feedback</parameter>
        <parameter key="oxind_feedback.model.feedbacktype.class">Oxind\FeedbackBundle\Entity\FeedbackType</parameter>
        <parameter key="oxind_feedback.model.feedbackdisplay.class">Oxind\FeedbackBundle\Entity\FeedbackDisplay</parameter>
        <parameter key="oxind_feedback.model.timeline.class">Oxind\FeedbackBundle\Entity\Timeline</parameter>
        <parameter key="oxind_feedback.model.vote.class">Oxind\FeedbackBundle\Entity\Vote</parameter>

        <parameter key="oxind_feedback.manager.feedback.class">Oxind\   `FeedbackBundle\Entity\FeedbackManager</parameter>
        <parameter key="oxind_feedback.manager.feedbacktype.class">Oxind\FeedbackBundle\Entity\FeedbackTypeManager</parameter>
        <parameter key="oxind_feedback.manager.feedbackdisplay.class">Oxind\FeedbackBundle\Entity\FeedbackDisplayManager</parameter>
        <parameter key="oxind_feedback.manager.timeline.class">Oxind\FeedbackBundle\Entity\TimelineManager</parameter>
        <parameter key="oxind_feedback.manager.vote.class">Oxind\FeedbackBundle\Entity\VoteManager</parameter>
        <parameter key="oxind_feedback.model_manager_name"/>
    </parameters>

    <services>

         <service id="oxind_feedback.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>%oxind_feedback.model_manager_name%</argument>
        </service>

        <service id="oxind_feedback.manager.feedback" class="%oxind_feedback.manager.feedbackdisplay.class%">
            <argument type="service" id="oxind_feedback.entity_manager" />
            <argument>%oxind_feedback.model.feedback.class%</argument>
        </service>
        
        <service id="oxind_feedback.manager.feedbackdisplay" class="%oxind_feedback.manager.feedbackdisplay.class%">
            <argument type="service" id="oxind_feedback.entity_manager" />
            <argument>%oxind_feedback.model.feedbackdisplay.class%</argument>
        </service>
        
        <service id="oxind_feedback.manager.feedbacktype" class="%oxind_feedback.manager.feedbacktype.class%">
            <argument type="service" id="oxind_feedback.entity_manager" />
            <argument>%oxind_feedback.model.feedbacktype.class%</argument>
        </service>
        
        <service id="oxind_feedback.manager.timeline" class="%oxind_feedback.manager.timeline.class%">
            <argument type="service" id="oxind_feedback.entity_manager" />
            <argument>%oxind_feedback.model.timeline.class%</argument>
        </service>
        
        <service id="oxind_feedback.manager.vote" class="%oxind_feedback.manager.vote.class%">
            <argument type="service" id="oxind_feedback.entity_manager" />
            <argument>%oxind_feedback.model.vote.class%</argument>
        </service>

    </services>
</container>